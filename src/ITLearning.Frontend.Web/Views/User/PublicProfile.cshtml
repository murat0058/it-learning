@model ITLearning.Contract.Data.Model.User.UserProfileData

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <section class="user-profile-container">
                    <img class="user-image" src="@Model.ProfileImagePath" alt="Zdjęcie profilowe" />
                    <div class="user-data-container">
                        <div class="user-name">
                            <p>@(Model.FirstName ?? Model.UserName)</p>
                        </div>
                    </div>
                </section>
                <div style="margin-top: 15px;">
                    <label class="control-label"><i class="fa fa-info-circle" style="margin-right: 5px;"></i> Informacje</label>
                    <hr style="margin-top: 0px;" />
                    <div class="col-md-3" style="padding-left: 0px;">
                        <label class="control-label">Email</label>
                    </div>
                    <div class="col-md-9">
                        @Model.Email
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <h5 class="learning-hub-title">ZADANIA STWORZONE PRZEZ UŻYTKOWNIKA</h5>
                <itl-task-list>
                    <itl-loading-indicator parent-vm="taskListVm" dot-background="#333" dot-size="5px"></itl-loading-indicator>
                </itl-task-list>

                <h5 class="learning-hub-title">GRUPY UŻYTKOWNIKA</h5>
                <itl-groups-basic-list no-of-groups="3">
                    <itl-loading-indicator parent-vm-scoped="groupListVm" dot-background="#333" dot-size="5px"></itl-loading-indicator>
                </itl-groups-basic-list>
            </div>
        </div>
    </div>
</div>