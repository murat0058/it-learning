@model PasswordEntryViewModel

@{
    ViewBag.PageTitle = "Uzyskaj dostęp do grupy";
}

@Html.Partial("Partials/Groups/GroupHeader", Model.BasicDataViewModel)

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form asp-action="PasswordEntry" asp-controller="Groups" method="post" role="form" >
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <span><i class="fa fa-lock"></i> | Grupa prywatna - uzyskaj dostęp</span>
                        </div>
                        <div class="panel-body">
                            <input asp-for="PasswordEntryDataViewModel.GroupId" value="@Model.PasswordEntryDataViewModel.GroupId" type="hidden" class="form-control" />
                            <div class="form-group">
                                <label asp-for="PasswordEntryDataViewModel.Password" class="control-label"></label>
                                <input asp-for="PasswordEntryDataViewModel.Password" class="form-control" />
                                <span asp-validation-for="PasswordEntryDataViewModel.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary pull-right" value="Wyślij" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>