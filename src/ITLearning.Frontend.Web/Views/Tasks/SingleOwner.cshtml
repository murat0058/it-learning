@model ITLearning.Contract.Data.Model.Tasks.TaskData

<link href="~/lib/angular-rangeslider/angular.rangeslider.css" rel="stylesheet" />

@{
    var language = Model.SelectedLanguage.ToString();
}

<div class="task-header" ng-style="ownerSingleTaskVM.BackgroundImage" ng-controller="OwnerSingleTaskViewController as ownerSingleTaskVM"
     ng-init="ownerSingleTaskVM.init('@language')">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div ng-style="ownerSingleTaskVM.BackgroundColor" style="width: 100px; height: 26px; border-radius: 3px; margin-left: 1px;">
                    <div style="display: inline-block;">
                        <i class="fa fa-file" style="font-size: 26px;"></i>
                    </div>
                    <div style="display: inline-block; margin-left: 5px;">
                        <h3 class="name" style="font-size: 20px; position:absolute; top: -3px;"> {{ownerSingleTaskVM.Language}}</h3>
                    </div>
                </div>
                <h4 class="description">@Model.Title</h4>
            </div>
            <div class="col-md-4">
                <p>Grupa</p>
                @if (Model.UserGroup != null)
                {
                    <div><a href="/Groups/@Model.UserGroup.Id"><i class="fa fa-users"></i> @Model.UserGroup.Name</a></div>
                }
                else
                {
                    <div>Brak przydzielonej grupy</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div id="task-description" ng-show="ownerSingleTaskVM.IsDescriptionVisible">
                    @Html.Raw(Model.Description)
                </div>
                <div class="btn btn-success" ng-click="ownerSingleTaskVM.IsDescriptionVisible = !ownerSingleTaskVM.IsDescriptionVisible" style="margin-left: 0px;">
                    <i ng-class="ownerSingleTaskVM.IsDescriptionVisible ? 'fa fa-arrow-circle-up' : 'fa fa-arrow-circle-down'"></i>
                    {{ ownerSingleTaskVM.IsDescriptionVisible ? "Ukryj" : "Pokaż" }} Opis
                </div>
                <div>
                    <label class="control-label" style="margin-top: 42px;">Instancje zadania:</label>
                    <div class="table-responsive">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th style="min-width: 110px;">Użytkownik</th>
                                    <th>Rozpoczęto</th>
                                    <th>Zakończono</th>
                                    <th>Code Review</th>
                                    <th>Repozytorium</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TaskInstances)
                                {
                                    <tr>
                                        <td style="min-width: 110px;">@item.User.UserName</td>
                                        <td>@item.CreateDate</td>
                                        @if (@item.Finished)
                                        {
                                            <td>@item.FinishDate</td>
                                        }
                                        else
                                        {
                                            <td>-</td>
                                        }
                                        <td>
                                            @if (item.CodeReviewExist)
                                            {
                                                <a style="cursor: pointer;" data-toggle="modal" data-target="#ownerViewCodeReviewModal"><i class="fa fa-check"></i> Wyświetl</a>
                                            }
                                            else if (item.Finished)
                                            {
                                                <a style="cursor: pointer;" data-toggle="modal" data-target="#createCodeReviewModal"><i class="fa fa-plus"></i> Dodaj</a>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>
                                            <button style="padding: 0px; background-color: transparent;" class="btn btn-default" onclick="copyToClipboard('@item.User.UserName', '@item.RepositoryLink')"><i class="fa fa-git"></i> <i class="fa fa-mail-forward"></i></button>
                                        </td>
                                        <td>
                                            @if (item.CodeReviewExist)
                                            {
                                                <span style="background-color: forestgreen; border-radius: 3px; padding: 5px; color: white;">
                                                    Zakończone
                                                </span>
                                            }
                                            else if (item.Finished)
                                            {
                                                <span style="background-color: orange; border-radius: 3px; padding: 5px; color: white;">
                                                    Oczekujące na ocenę
                                                </span>
                                            }
                                            else
                                            {
                                                <span style="background-color: dimgray; border-radius: 3px; padding: 5px; color: white;">
                                                    W trakcie
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Link do repozytorium GIT</label>
                    <input class="form-control" value="@Model.RepositoryLink" readonly />
                </div>
                <div>
                    <label class="control-label">Dostępne branch'e:</label>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th style="min-width: 110px;">Nazwa</th>
                            <th>Opis</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Branches)
                        {
                            <tr>
                                <td style="min-width: 110px;">@item.Name</td>
                                <td style="word-break: break-word">@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div style="margin-left: -10px; margin-top: 50px; margin-bottom: 50px;">
                    <a href="/Tasks/Edit/@Model.Id"><div class="btn btn-success"><i class="fa fa-pencil"></i> Edytuj</div></a>
                    <a href="/Tasks/Delete/@Model.Id"><div class="btn btn-success"><i class="fa fa-trash"></i> Usuń</div></a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard(user, text) {
            var message = "Link do repozytorium użytkownika " + user + ". Ctrl+C, Enter";
            window.prompt(message, text);
        }
    </script>
}

<div class="modal fade" tabindex="-1" role="dialog" id="createCodeReviewModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Code Review - Ziutek</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">
                        <label class="control-label">
                            Czas trwania
                        </label>
                    </div>
                    <div class="col-md-9">
                        13 dni
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3" style="margin-top: 8px;">
                        <div>
                            <label class="control-label">Branch'e:</label>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="min-width: 110px;">Nazwa</th>
                                    <th>Opis</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Branches)
                                {
                                <tr>
                                    <td style="min-width: 110px;">@item.Name</td>
                                    <td style="word-break: break-word">@item.Description</td>
                                    <td>Wykorzystano</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label class="control-label" style="margin-top: 15px;">
                            Architektura
                        </label>
                    </div>
                    <div class="col-md-9">
                        <div range-slider
                             min="0"
                             pin-handle="min"
                             max="120"
                             step="20"
                             model-min="instanceSingleTaskVM.archMin"
                             model-max="instanceSingleTaskVM.archMax">
                        </div>
                        <span style="margin-top: -25px;" class="pull-left">Słabo</span>
                        <span style="margin-top: -25px; text-align: center;" class="center-block">Dobrze</span>
                        <span style="margin-top: -25px;" class="pull-right">Świetnie</span>
                    </div>
                    <div class="col-md-3">
                        <label class="control-label" style="margin-top: 15px;">
                            Optymalizacja
                        </label>
                    </div>
                    <div class="col-md-9">
                        <div range-slider
                             min="0"
                             pin-handle="min"
                             max="120"
                             step="20"
                             model-min="instanceSingleTaskVM.optMin"
                             model-max="instanceSingleTaskVM.optMax">
                        </div>
                        <span style="margin-top: -25px;" class="pull-left">Słabo</span>
                        <span style="margin-top: -25px; text-align: center;" class="center-block">Dobrze</span>
                        <span style="margin-top: -25px;" class="pull-right">Świetnie</span>
                    </div>
                    <div class="col-md-3">
                        <label class="control-label" style="margin-top: 15px;">
                            Przejrzystość
                        </label>
                    </div>
                    <div class="col-md-9">
                        <div range-slider
                             min="0"
                             pin-handle="min"
                             max="120"
                             step="20"
                             model-min="instanceSingleTaskVM.tesMin"
                             model-max="instanceSingleTaskVM.tesMax">
                        </div>
                        <span style="margin-top: -25px;" class="pull-left">Słabo</span>
                        <span style="margin-top: -25px; text-align: center;" class="center-block">Dobrze</span>
                        <span style="margin-top: -25px;" class="pull-right">Świetnie</span>
                    </div>
                    <div class="col-md-12">
                        <label class="control-label">Komentarz</label>
                        <textarea class="form-control" style="max-width: 100%; min-height: 100px;"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                <button type="button" class="btn btn-primary">Zapisz</button>
            </div>
        </div>
    </div>
</div>

