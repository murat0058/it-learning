@model LoginViewModel

<div class="form-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form role="form" asp-action="Login" asp-controller="Account">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <span><i class="fa fa-info-circle"></i> | Zaloguj się w IT Learning</span>
                        </div>
                        <div class="panel-body">
                            @Html.ValidationSummary(excludePropertyErrors: true)
                            <div class="form-group">
                                <label for="Login">Login</label>
                                <span class="label-validation-message">@Html.ValidationMessageFor(p => p.Login)</span>
                                <input type="text" class="form-control" id="Login" name="Login" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Hasło</label>
                                <span class="label-validation-message">@Html.ValidationMessageFor(p => p.Password)</span>
                                <input type="password" class="form-control" id="Password" name="Password" />
                            </div>
                            <div class="checkbox">
                                <label for="RememberMe">
                                    <input type="checkbox" id="RememberMe" name="RememberMe" /> Zapamiętaj mnie
                                </label>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary pull-right">Zaloguj się</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>