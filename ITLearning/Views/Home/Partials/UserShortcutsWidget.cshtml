@model IEnumerable<ITLearning.Frontend.Web.ViewModels.User.UserWidgetDirectiveViewModel>
	
<div class="user-shortcuts-widget" ng-controller="UserShortcutsWidgetController as vm">
	<div class="user-shortcuts-content" style="height: 150px; background-color: red;">
		<div class="title">testy</div>
		@foreach(var directive in Model)
		{
			@Html.Raw(directive.DirectiveString)
		}
	</div>
	<ul class="user-shortcuts-tabs">
		@foreach(var directive in Model)
		{
			<li class="tab @directive.TabType" title="@directive.TabTitle" ng-click="vm.activateDirective(@directive.DirectiveId)">
				<i class="fa @directive.TabIcon"></i>
			</li>	
		}
	</ul>
</div>

